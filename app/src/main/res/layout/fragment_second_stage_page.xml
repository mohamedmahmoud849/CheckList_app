<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".second_stage_page"
    android:orientation="vertical"
    >
    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/yell"
        android:visibility="visible"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:textSize="@dimen/titles_size"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/sec_case_txt"
        android:textAllCaps="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="@dimen/titles_size"
        android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:padding="8dp"
        android:background="@color/yell"
        android:visibility="visible"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:id="@+id/sec_case_txt2"
        android:textAllCaps="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/yell"
        android:visibility="visible"
        android:textColor="@color/red"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"
        android:id="@+id/sec_case_txt3"
        android:textAllCaps="true"
        android:textSize="@dimen/titles_size"

        />


    <Button
        android:layout_width="@dimen/case_button_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/emer_button"
        app:backgroundTint="@color/red"
        android:layout_marginBottom="20dp"
        android:id="@+id/sec_bt1"
        android:layout_marginTop="@dimen/space_bt_titles"
        android:visibility="gone"

        />
    <Button
        android:layout_width="@dimen/case_button_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/emer_button"
        app:backgroundTint="@color/red"
        android:layout_marginBottom="20dp"
        android:id="@+id/sec_bt2"
        android:visibility="gone"
        />
    <Button
        android:layout_width="@dimen/case_button_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/emer_button"
        app:backgroundTint="@color/red"
        android:layout_marginBottom="20dp"
        android:id="@+id/sec_bt3"
        android:visibility="gone"
        />
    <Button
        android:layout_width="@dimen/case_button_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/emer_button"
        app:backgroundTint="@color/red"
        android:layout_marginBottom="20dp"
        android:id="@+id/sec_bt4"
        android:visibility="gone"
        />
    <Button
        android:layout_width="@dimen/case_button_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/emer_button"
        app:backgroundTint="@color/red"
        android:layout_marginBottom="20dp"
        android:id="@+id/sec_bt5"
        android:visibility="gone"
        />
    <Button
        android:layout_width="@dimen/case_button_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/emer_button"
        app:backgroundTint="@color/red"
        android:layout_marginBottom="20dp"
        android:id="@+id/sec_bt6"
        android:visibility="gone"
        />
    <Button
        android:layout_width="@dimen/case_button_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/emer_button"
        app:backgroundTint="@color/red"
        android:layout_marginBottom="20dp"
        android:id="@+id/sec_bt7"
        android:visibility="gone"
        />






</LinearLayout>